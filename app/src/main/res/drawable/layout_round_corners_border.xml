<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:drawable="@color/grey" android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#DCDCDC" />

            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />

            <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />

        </shape>

    </item>

    <item android:id="@android:id/background" android:drawable="@color/grey" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#DCDCDC" />

            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />

            <padding android:bottom="0dip" android:left="0dip" android:right="0dip" android:top="0dip" />

        </shape>

    </item>

</selector>