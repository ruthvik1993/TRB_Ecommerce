<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background" android:drawable="@color/grey" android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <solid android:color="#fefefe" />

            <stroke android:width="1dp" android:color="#dfdfdf" />

        </shape>
    </item>

    <item android:id="@android:id/background" android:drawable="@color/grey" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <solid android:color="#fefefe" />

            <stroke android:width="1dp" android:color="#dfdfdf" />

        </shape>
    </item>


</selector>