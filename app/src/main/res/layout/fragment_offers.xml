<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RadioGroup
        android:id="@+id/radioGroupOffers"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.thericebag.application.application.views.RadioButton_RobotoRegular
            android:id="@+id/radioOffer1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:button="@null"
            android:drawableTop="@drawable/offer_newproduct_notselected"
            android:gravity="center|bottom"
            android:padding="10dp"
            android:text="Price Discount"
            android:textColor="#6f6f6f"
            android:textSize="12dp"
            android:visibility="gone" />

        <com.thericebag.application.application.views.RadioButton_RobotoRegular
            android:id="@+id/radioOffer2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:button="@null"
            android:drawableTop="@drawable/offer_pricediscount_notselected"
            android:gravity="bottom|center"
            android:padding="10dp"
            android:text="New Products"
            android:textColor="#6f6f6f"
            android:textSize="12dp"
            android:visibility="gone" />

        <com.thericebag.application.application.views.RadioButton_RobotoRegular
            android:id="@+id/radioOffer3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#fbfbfb"
            android:button="@null"
            android:drawableTop="@drawable/offer_specialoffers_notselected"
            android:gravity="center|bottom"
            android:padding="10dp"
            android:text="Special Offers"
            android:textColor="#6f6f6f"
            android:textSize="12dp"
            android:visibility="gone" />

    </RadioGroup>

    <com.thericebag.application.application.views.TextView_RobotoRegular
        android:id="@+id/textOfferSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroupOffers"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:textColor="#6f6f6f"
        android:textSize="14dp" />

</RelativeLayout>